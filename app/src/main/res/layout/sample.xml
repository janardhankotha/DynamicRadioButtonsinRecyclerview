            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            card_view:cardElevation="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SouthNon "

                    android:textColor="@color/red"
                    android:padding="5dp"
                    android:id="@+id/chinesenon" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:padding="5dp"
                        android:text="Rice, Chapati, Dal, curd, Apadam, Potato fry."
                        android:id="@+id/chinesespecification"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Rs.255/-"
                        android:id="@+id/chinesetextrs"

                        android:layout_marginRight="0dp"/>


                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#F2F1F7"

                    />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="10dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1.3">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Full Rice"
                                android:checked="true"/>
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rice + 2 Chapati"/>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_weight="0.7"
                        android:weightSum="3">





                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="30dp"


                            android:src="@drawable/sub2"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="0"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="30dp"

                            android:layout_weight="1"
                            android:src="@drawable/add2"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>





