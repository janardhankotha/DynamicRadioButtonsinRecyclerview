<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F1F7"
    android:id="@+id/relativelayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            card_view:cardBackgroundColor="#ffffff"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            card_view:cardElevation="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SouthNon "

                    android:padding="5dp"
                    android:id="@+id/chinesenon" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:padding="5dp"
                        android:text="Murgh Do Pyaz,veg kgubjhvcg jgckbjhc ngjblkg hbjhblkbg hbknyg bkbvb."
                        android:id="@+id/chinesespecification"/>




                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#F2F1F7"

                    />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="10dp">




                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_weight="0.7"
                        android:weightSum="3">


                        <ImageView
                            android:id="@+id/butdecrement1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/sub2"


                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/quantity_text_view1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0" />

                        <ImageView
                            android:id="@+id/butincrement1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/add2"

                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>
                <RadioGroup
                    android:id="@+id/Radiogroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RadioGroup>

            </LinearLayout>





        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>